{
  "name": "facturascripts/facturascripts",
  "type": "project",
  "description": "Open source ERP software. Built on modern PHP and bootstrap 5. Easy and powerful.",
  "homepage": "https://facturascripts.com",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "Carlos García Gómez",
      "email": "carlos@facturascripts.com"
    }
  ],
  "config": {
    "platform": {
      "php": "8.0"
    }
  },
  "require": {
    "php": ">=8.0",
    "ext-bcmath": "*",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-fileinfo": "*",
    "ext-gd": "*",
    "ext-json": "*",
    "ext-mysqli": "*",
    "ext-pgsql": "*",
    "ext-simplexml": "*",
    "ext-zip": "*",
    "mk-j/php_xlsxwriter": "0.39",
    "parsecsv/php-parsecsv": "1.*",
    "phpmailer/phpmailer": "6.*",
    "rospdf/pdf-php": "0.12.*",
    "twig/twig": "3.*",
    "globalcitizen/php-iban": "4.*",
    "pragmarx/google2fa": "^8.0",
    "chillerlan/php-qrcode": "^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "9.*",
    "squizlabs/php_codesniffer": "3.*",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "FacturaScripts\\Core\\": "Core/",
      "FacturaScripts\\Dinamic\\": "Dinamic/",
      "FacturaScripts\\Plugins\\": "Plugins/",
      "FacturaScripts\\Test\\": "Test/"
    }
  },
  "keywords": [
    "facturascripts",
    "php",
    "invoice",
    "erp",
    "crm",
    "billing",
    "accounting"
  ],
  "support": {
    "issues": "https://facturascripts.com/crear-issue",
    "source": "https://github.com/NeoRazorX/facturascripts",
    "docs": "https://facturascripts.com/ayuda",
    "chat": "https://discord.gg/qKm7j9AaJT"
  },
  "funding": [
    {
      "type": "other",
      "url": "https://facturascripts.com/patrocinar"
    }
  ],
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test:coverage": "vendor/bin/phpunit --coverage-html coverage",
    "phpstan": "vendor/bin/phpstan analyse Core",
    "cs-check": "vendor/bin/phpcs",
    "cs-fix": "vendor/bin/phpcbf",
    "dev-server": "php -S localhost:8000 index.php"
  }
}
