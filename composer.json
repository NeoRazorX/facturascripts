{
    "name": "facturascripts/facturascripts",
    "description": "Open source ERP software. Built on PHP, symfony componentes and bootstrap 4. Easy and powerful.",
    "homepage": "https://www.facturascripts.com",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Carlos García Gómez",
            "email": "carlos@facturascripts.com"
        }
    ],
    "require": {
        "php": ">=7.0.8",
        "symfony/console": "^3.4",
        "symfony/event-dispatcher": "^3.4",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^3.4",
        "symfony/http-foundation": "^3.4",
        "symfony/lts": "^3",
        "symfony/translation": "^3.4",
        "symfony/yaml": "^3.4",
        "twig/twig": "v2.*",
        "maximebf/debugbar": "1.*",
        "rospdf/pdf-php": "0.12.43",
        "mk-j/php_xlsxwriter": "0.37",
        "phpmailer/phpmailer": "v6.0.3",
        "parsecsv/php-parsecsv": "0.4.5"
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.*",
        "squizlabs/php_codesniffer": "^3.2",
        "symfony/dotenv": "^3.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "FacturaScripts\\Core\\": "Core/",
            "FacturaScripts\\Dinamic\\": "Dinamic/",
            "FacturaScripts\\Plugins\\": "Plugins/",
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "id": "01C4QSW0F4BT8ARBYVTKMVEN6N",
            "allow-contrib": false
        }
    },
    "keywords" : [
        "facturascripts",
        "php",
        "invoice",
        "erp",
        "crm",
        "billing",
        "accounting"
    ]
}
