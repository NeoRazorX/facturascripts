{% extends "Master/MenuBghTemplate.html.twig" %}

{% block body %}
    <div class="container">
        <div class="mb-5">
            <h3>Instalación</h3>
            <hr>
            <p>FacturaScripts Versión: <strong>{{ fsc.data.facturascripts_version }}</strong></p>
            <p>PHP Versión: <strong>{{ fsc.data.php_version }}</strong></p>
            <p>Extensiones activas: <strong>{{ fsc.data.extensions | join(', ') }}</strong></p>
            <p>Tamaño Máximo de Subida de Archivo: <strong>{{ bytes(fsc.data.max_filesize) }}</strong></p>
            <p>Software del Servidor: <strong>{{ fsc.data.server_software }}</strong></p>
            <p>Sistema Operativo: <strong>{{ fsc.data.os_info }}</strong></p>
            <p>Base de Datos: <strong>{{ fsc.data.database_version }}</strong></p>
        </div>

        <div class="mb-5">
            <h3>Plugins</h3>
            <hr>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">{{ trans('name') }}</th>
                    <th scope="col">{{ trans('enabled') }}</th>
                    <th scope="col">{{ trans('min-php-version') }}</th>
                    <th scope="col">{{ trans('min-fs-version') }}</th>
                    <th scope="col">{{ trans('plugins-required') }}</th>
                    <th scope="col">{{ trans('php-extensions-required') }}</th>
                    <th scope="col">{{ trans('priority') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for plugin in fsc.data.plugins %}
                    <tr>
                        <td>{{ plugin.name }} - v{{ plugin.version }}</td>
                        <td>{{ plugin.enabled ? trans('yes') : trans('no') }}</td>
                        <td>{{ plugin.min_php }}</td>
                        <td>{{ plugin.min_version }}</td>
                        <td>{{ plugin.require | join(', ') }}</td>
                        <td>{{ plugin.require_php | join(', ') }}</td>
                        <td>{{ plugin.order }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
