<div id="messages-toasts" style="z-index: 9999; position: absolute; bottom: 25px; right: 25px;"></div>

<script>
    function setToast(message, style = 'info', title = '', time = 10000, empty = false) {
        if (empty) {
            $('#messages-toasts').html('');
        }

        let icon = '';
        let styleBorder = '';
        let styleHeader = '';
        let role = 'status';
        let live = 'polite';
        let delay = time > 0 ? 'data-delay="' + time + '"' : 'data-autohide="false"';

        switch (style) {
            case 'completed':
                styleHeader = 'bg-success text-white';
                styleBorder = 'border border-success';
                icon = '<i class="fas fa-check-circle mr-1"></i>';
                title = title !== '' ? title : '{{ trans('completed') }}';
                break;

            case 'danger':
                role = 'alert';
                live = 'assertive';
                styleHeader = 'bg-danger text-white';
                styleBorder = 'border border-danger';
                icon = '<i class="fas fa-times-circle mr-1"></i>';
                title = title !== '' ? title : '{{ trans('common-error') }}';
                break;

            case 'info':
                styleHeader = 'bg-info text-white';
                styleBorder = 'border border-info';
                icon = '<i class="fas fa-info-circle mr-1"></i>';
                title = title !== '' ? title : '{{ trans('info') }}';
                break;

            case 'spinner':
                styleHeader = 'bg-info text-white';
                styleBorder = 'border border-info';
                icon = '<i class="fa-solid fa-circle-notch fa-spin mr-1"></i>';
                title = title !== '' ? title : '{{ trans('processing') }}';
                break;

            case 'success':
                styleHeader = 'bg-success text-white';
                styleBorder = 'border border-success';
                icon = '<i class="fas fa-check-circle mr-1"></i>';
                title = title !== '' ? title : '{{ trans('success') }}';
                break;

            case 'warning':
                styleHeader = 'bg-warning';
                styleBorder = 'border border-warning';
                icon = '<i class="fas fa-exclamation-circle mr-1"></i>';
                title = title !== '' ? title : '{{ trans('warning') }}';
                break;
        }

        let html = '<div class="toast toast-' + style + ' ' + styleBorder + '" role="' + role + '" aria-live="' + live + '" aria-atomic="true" ' + delay + '>'
            + '<div class="toast-header ' + styleHeader + '">'
            + '<strong class="mr-auto">' + icon + title + '</strong>'
            + '<button type="button" class="ml-4 btn close ' + styleHeader + '" data-dismiss="toast" aria-label="{{ trans('close') }}">'
            + '<span aria-hidden="true">&times;</span>'
            + '</button>'
            + '</div>';

            if (message !== '') {
                html += '<div class="toast-body">'
                    + message
                    + '</div>';
            }

            html += '</div>';

        $('#messages-toasts').append(html);
        $('.toast').toast('show');
    }
</script>