{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <br/><br/>
                <div class="jumbotron">
                    <h1>
                        <i class="fas fa-lock" aria-hidden="true"></i> {{ i18n.trans('access-denied') }}:
                    </h1>
                    <b>{{ controllerName }}</b>
                    <hr class="my-4">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <a class="navbar-brand" href="index.php">
                            <img src="Core/Assets/Images/logo.png" width="30" height="30" class="d-inline-block align-top" alt="FacturaScripts"/>
                        </a>
                        <ul class="nav navbar-nav mr-auto">
                            {% import 'Macro/Menu.html.twig' as macros %}
