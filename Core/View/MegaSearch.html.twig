{% extends "Master/MenuBgTemplate.html.twig" %}

{% block body %}
    {% for section in fsc.sections %}
        <script type="text/javascript">
            $(document).ready(function () {
                searchOnSection("{{ section | raw }}");
            });
        </script>
    {% endfor %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <form action="{{ fsc.url() }}" method="post" class="form">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" name="query" value="{{ fsc.query }}" class="form-control form-control-lg"
                                   autocomplete="off" autofocus=""/>
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search" aria-hidden="true"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-xl-2">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist">
                    {% for key, result in fsc.results %}
                        {% set active = (loop.index == 1) ? 'nav-link active' : 'nav-link' %}
                        <a class="{{ active }}" data-toggle="pill" href="#v-pills-{{ key }}" role="tab"
                           aria-controls="v-pills-{{ key }}" aria-expanded="true">
                            <span class="badge badge-secondary float-right">{{ result.results | length }}</span>
                            <i class="{{ result.icon }} fa-fw"></i>
                            {{ i18n.trans(result.title) }}
                        </a>
                    {% endfor %}
                </div>
            </div>
            <div class="col-sm-9 col-xl-10">
                <div class="tab-content" id="v-pills-tabContent">
                    {% for key, result in fsc.results %}
                        {% set active = (loop.index == 1) ? ' show active' : '' %}
                        <div class="tab-pane fade{{ active }}" id="v-pills-{{ key }}" role="tabpanel"
                             aria-labelledby="v-pills-{{ key }}-tab">
                            <div class="card shadow">
                                {{ _self.showSearchResults(result, i18n) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% macro showSearchResults(result, i18n) %}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                {% for key, column in result.columns %}
                    {% if key == 'icon' %}
                        <th>
                        </th>
                    {% else %}
                        <th>
                            {{ i18n.trans(column) | capitalize }}
                        </th>
                    {% endif %}
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for line in result.results %}
                {% set link = line.link ? line.link : '#' %}
                <tr class="clickableRow" data-href="{{ link }}" data-target="_blank">
                    {% for key, column in result.columns %}
                        {% if key == 'icon' %}
                            <td class="text-center">
                                <i class="{{ line[key] }} fa-fw"></i>
                            </td>
                        {% elseif key != 'link' %}
                            <td>{{ line[key] }}</td>
                        {% endif %}
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endmacro %}