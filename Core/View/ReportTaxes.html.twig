{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
    <form method="post">
        <input type="hidden" name="action" value="export" />
        <div class="container" style="margin-top: -60px;">
            <div class="row">
                <div class="col-12">
                    <div class="card shadow mb-3">
                        <div class="card-body">
                            <h1 class="h3 mb-3">
                                <i class="{{ fsc.getPageData().icon }}"></i> {{ fsc.title }}
                            </h1>
                            <div class="form-row">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        {{ i18n.trans('company') }}
                                        <select name="idempresa" class="form-control">
                                            {% for empresa in fsc.empresa.all() %}
                                                <option value="{{ empresa.idempresa }}">{{ empresa.nombrecorto }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        {{ i18n.trans('invoices') }}
                                        <select name="source" class="form-control">
                                            <option value="sales">{{ i18n.trans('customers') }}</option>
                                            <option value="purchases">{{ i18n.trans('suppliers') }}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        {{ i18n.trans('from-date') }}
                                        <input type="date" name="datefrom" value="{{ fsc.datefrom }}" class="form-control" required="" />
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        {{ i18n.trans('until-date') }}
                                        <input type="date" name="dateto" value="{{ fsc.dateto }}" class="form-control" required="" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-row align-items-end">
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        {{ i18n.trans('format') }}
                                        <select name="format" class="form-control">
                                            <option value="pdf">PDF</option>
                                            <option value="csx">CSV</option>
                                            <option value="xls">Excel</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">
                                            {{ i18n.trans('generate') }}
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}


{% block css %}
    {{ parent() }}
    <style>
        .bg-header {
            background-color: #FAFBFC;
            padding-bottom: 90px;
        }
    </style>
{% endblock %}