<div class="card shadow">
    <div class="card-body" style="width: 25vw">
        <form action="{{ fsc.url }}?code={{ fsc.model.idproducto }}&activetab=EditVariante" id="createvariables" method="POST" onsubmit="animateSpinner('add')">
            {{ formToken() }}
            <input type="hidden" name="action" value="create-variants">
            <input type="hidden" name="code" value="{{ fsc.model.idproducto }}">
            <div class="form-group">
                <label for="price">{{ trans('price') }}</label>
                <input type="number" step="0.01" class="form-control" name="price" id="price" autocomplete="off" value="0">
            </div>
            <div class="checkboxs mb-3">
                {% set atributos = fsc.views['ViewCreateVariants'].model.all() %}
                {% for atributo in atributos %}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="attributes[]" value="{{ atributo.codatributo }}" id="attribute-{{ atributo.nombre }}">
                        <label class="form-check-label" for="attribute-{{ atributo.nombre }}">
                            {{ atributo.nombre }}
                        </label>
                    </div>
                {% endfor %}
            </div>
            <button type="submit" class="btn btn-success">{{ trans('create') }}</button>
        </form>
    </div>
</div>
