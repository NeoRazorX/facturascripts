{% extends "Master/MenuTemplate.html.twig" %}

{% block body %}
    <!-- Macros Template Imports -->
    {% import 'Macro/Forms.html.twig' as forms %}

    {% set ciudad = fsc.empresa ? fsc.empresa.ciudad : '' %}
    {% set codpais = appSettings.get('default','codpais','ESP') %}
    {% set provincia = fsc.empresa ? fsc.empresa.provincia : '' %}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>
                    <i class="fas fa-magic" aria-hidden="true"></i> {{ i18n.trans('wizard') }}
                    <a href="{{ fsc.url() }}" class="btn btn-sm btn-secondary">
                        <i class="fas fa-sync" aria-hidden="true"></i>
                    </a>
                </h1>
                <hr/>
            </div>
        </div>
        <form action="#" method="post" class="form">
            {% if fsc.showChangePasswd %}
                <div class="row bg-warning">
                    <div class="col-sm-6">
                        <div class="form-group">
                            {{ forms.simpleInput('password', 'password', '', 'password', i18n.trans('new-password'), 'fa-key') }}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            {{ forms.simpleInput('repassword', 'repassword', '', 'password', i18n.trans('repeat-new-password'), 'fa-key') }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <br/>
                    </div>
                </div>
            {% endif %}
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        {{ forms.simpleSelect('codpais', 'codpais', codpais, fsc.getSelectValues('Pais'), i18n.trans('country'), 'fa-globe') }}
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        {{ forms.simpleInput('provincia', 'provincia', provincia, 'text', i18n.trans('province')) }}
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        {{ forms.simpleInput('ciudad', 'ciudad', ciudad, 'text', i18n.trans('city')) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="far fa-save fa-fw" aria-hidden="true"></i>
                        {{ i18n.trans('save') }}
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}