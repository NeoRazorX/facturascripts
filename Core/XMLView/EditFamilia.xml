<view>
    <columns>
        <group numcolumns="12">
            <column title="Code" numcolumns="2" order="100"
                    description="Code for internal family use.">
                <widget type="text" fieldname="codfamilia" onclick="" icon="fa-object-group" required="true" />
            </column>
            
            <column title="Description" numcolumns="6" order="110">
                <widget type="text" fieldname="descripcion" required="true" />
            </column>
            
            <column title="Parent" numcolumns="4" order="120" description="Indicates if the family is grouped at a higher level.">
                <widget type="select" fieldname="madre">
                    <values source="familias" fieldcode="codfamilia" fieldtitle="descripcion"></values>
                </widget>
            </column>
        </group>                        
    </columns>    
</view>

