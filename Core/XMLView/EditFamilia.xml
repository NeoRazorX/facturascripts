<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" description="optional" numcolumns="2" order="100">
                <widget type="text" fieldname="codfamilia" icon="fas fa-hashtag" maxlength="8" readonly="dinamic" />
            </column>
            <column name="description" numcolumns="4" order="110">
                <widget type="text" fieldname="descripcion" maxlength="100" required="true" decimal="0" />
            </column>
            <column name="parent" description="desc-parent-family" numcolumns="4" order="120">
                <widget type="select" fieldname="madre" onclick="EditFamilia">
                    <values source="familias" fieldcode="codfamilia" fieldtitle="descripcion" />
                </widget>
            </column>
            <column name="products" display="right" numcolumns="2" order="125">
                <widget type="number" fieldname="numproductos" readonly="true" />
            </column>        
        </group>
        <group name="accounts" title="accounting" icon="fas fa-balance-scale" numcolumns="12">
            <column name="codsubcuentacom" title="subaccount-purchases" titleurl="ListCuenta" description="optional" order="100">
                <widget type="autocomplete" fieldname="codsubcuentacom">
                    <values source="subcuentas" fieldcode="codsubcuenta" />
                </widget>
            </column>
            <column name="codsubcuentaven" title="subaccount-sales" titleurl="ListCuenta" description="optional" order="110">
                <widget type="autocomplete" fieldname="codsubcuentaven">
                    <values source="subcuentas" fieldcode="codsubcuenta" />
                </widget>
            </column>
            <column name="codsubcuentairpcomf" title="subaccount-irpf" titleurl="ListCuenta" description="optional" order="120">
                <widget type="autocomplete" fieldname="codsubcuentairpfcom">
                    <values source="subcuentas" fieldcode="codsubcuenta" />
                </widget>
            </column>
        </group>
    </columns>
</view>