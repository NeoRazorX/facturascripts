<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="id" display="none" order="100">
                <widget type="text" fieldname="idlinea" readonly="true" required="true" />
            </column>
            <column name="idtrans" display="none" order="110">
                <widget type="text" fieldname="idtrans" readonly="true" required="true" />
            </column>
            <column name="reference" order="120">
                <widget type="autocomplete" fieldname="referencia">
                    <values source="variantes" fieldcode="referencia" fieldtitle="referencia"></values>
                </widget>
            </column>
            <column name="quantity" order="130">
                <widget type="number" fieldname="cantidad" />
            </column>
        </group>
    </columns>
</view>