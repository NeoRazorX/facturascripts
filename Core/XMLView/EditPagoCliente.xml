<view>
    <columns>
        <group name="main" numcolumns="12">
            <column name="id" display="none" order="100">
                <widget type="text" fieldname="idpago" />
            </column>
            <column name="customer" order="110">
                <widget type="autocomplete" fieldname="codcliente" onclick="EditCliente" required="true" readonly="dinamic">
                    <values source="clientes" fieldcode="codcliente" fieldtitle="nombre"></values>
                </widget>
            </column>
            <column name="amount" display="right" order="120">
                <widget type="money" fieldname="importe" />
            </column>
            <column name="fee" display="right" order="130">
                <widget type="money" fieldname="gastos" />
            </column>
            <column name="date" display="right" order="140">
                <widget type="date" fieldname="fecha" />
            </column>
            <column name="user" display="right" order="150">
                <widget type="select" fieldname="nick" readonly="true">
                    <values source="users" fieldcode="nick" fieldtitle="nick" />
                </widget>
            </column>
            <column name="description" numcolumns="12" order="160">
                <widget type="textarea" fieldname="descripcion" required="true" />
            </column>
        </group>
    </columns>
</view>
