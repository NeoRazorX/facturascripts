<view>
    <columns>
        <group name="log" title="which-logs-store" numcolumns="12" icon="fas fa-file-medical-alt">
            <column name="name" display="none" order="0">
                <widget type="text" fieldname="name" readonly="true" required="true" />
            </column>
            <column name="type-debug" order="100">
                <widget type="checkbox" fieldname="debug"/>
            </column>
            <column name="type-info" order="110">
                <widget type="checkbox" fieldname="info"/>
            </column>
            <column name="type-notice" order="120">
                <widget type="checkbox" fieldname="notice"/>
            </column>
            <column name="type-warning" order="130">
                <widget type="checkbox" fieldname="warning"/>
            </column>
            <column name="type-error" order="140">
                <widget type="checkbox" fieldname="error"/>
            </column>
            <column name="type-critical" order="150">
                <widget type="checkbox" fieldname="critical"/>
            </column>
        </group>
    </columns>
</view>