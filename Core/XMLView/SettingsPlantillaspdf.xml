<view>
    <columns>
        <group name="plantilla" title="template" numcolumns="6" icon="fa-adjust fa-lg" order="100">
            <column name="name" display="none" order="0">
                <widget type="text" fieldname="name" readonly="true" required="true" />
            </column>

            <column name="ppdf_plantilla" title="template" numcolumns="3" order="100">
                <widget type="number" decimals="0" fieldname="ppdf_plantilla" required="true" icon="fa-bars" />
            </column>
            
            <column name="ppdf_pcolor" title="pcolor" numcolumns="3" order="110">
                <widget type="color" fieldname="ppdf_pcolor" required="true" />
            </column>

            <column name="ppdf_scolor" title="scolor" numcolumns="3" order="120">
                <widget type="color" fieldname="ppdf_scolor" required="true" />
            </column>

            <column name="ppdf_tcolor" title="tcolor" numcolumns="3" order="130">
                <widget type="color" fieldname="ppdf_tcolor" required="true" />
            </column>
        </group>
        
        <group name="fonts" title="font-preferences" numcolumns="6" icon="fa-font fa-lg" order="200">
            <column name="ppdf_font" title="font" numcolumns="3" order="100">
                <widget type="select" fieldname="ppdf_font" required="true" icon="fa-font">
                    <values title="Arial">arial</values>
                    <values title="DejaVu Sans">dejavusans</values>
                    <values title="Verdana">verdana</values>
                    <values title="Lucida Sans">lucidasans</values>
                    <values title="Times New Roman">timesnewroman</values>
                    <values title="Comic Sans MS">comicsans</values>
                </widget>
            </column>

            <column name="ppdf_fsize" title="size" numcolumns="3" order="110">
                <widget type="select" fieldname="ppdf_fsize" required="true" icon="fa-sort-numeric-asc">
                    <values start="8" end="16" step="1"></values>
                </widget>
            </column>

            <column name="ppdf_margin_top" title="margin-top" numcolumns="3" order="120">
                <widget type="select" fieldname="ppdf_margin_top" required="true" icon="fa-sort-numeric-asc">
                    <values start="0" end="5" step="1"></values>
                </widget>
            </column>

            <column name="ppdf_mostrar_empresa" title="company" numcolumns="3" order="130">
                <widget type="select" fieldname="ppdf_font" required="true" icon="fa-header">
                    <values title="H1">h1</values>
                    <values title="H2">h2</values>
                    <values title="H3">h3</values>
                    <values title="H4">h4</values>
                    <values title="H5">h5</values>
                    <values title="H6">h6</values>
                </widget>
            </column>
        </group>
