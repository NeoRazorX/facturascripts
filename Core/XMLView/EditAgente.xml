<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" numcolumns="2" order="100">
                <widget type="text" fieldname="codagente" icon="fa-user" required="true" />
            </column>
            <column name="name" numcolumns="4" order="110">
                <widget type="text" fieldname="nombre" required="true" />
            </column>
            <column name="surname" numcolumns="6" order="120">
                <widget type="text" fieldname="apellidos" />
            </column>
            <column name="cifnif" numcolumns="4" order="130">
                <widget type="text" fieldname="cifnif" />
            </column>
            <column name="position" numcolumns="4" order="140">
                <widget type="text" fieldname="cargo" />
            </column>
            <column name="commission" title="percentage-commission" numcolumns="4" order="150">
                <widget type="number" fieldname="porcomision" />
            </column>
            <column name="phone" numcolumns="4" order="160">
                <widget type="text" fieldname="telefono1" />
            </column>
            <column name="phone2" numcolumns="4" order="170">
                <widget type="text" fieldname="telefono2" />
            </column>
            <column name="email" numcolumns="4" order="180">
                <widget type="text" fieldname="email" />
            </column>
        </group>
        <group name="address" title="address" numcolumns="12">
            <column name="address" numcolumns="4" order="100">
                <widget type="text" fieldname="direccion" />
            </column>
            <column name="postalcode" numcolumns="2" order="110">
                <widget type="text" fieldname="codpostal" />
            </column>
            <column name="city" numcolumns="3" order="120">
                <widget type="text" fieldname="ciudad" />
            </column>
            <column name="province" numcolumns="3" order="130">
                <widget type="text" fieldname="provincia" />
            </column>
        </group>
        <group name="other" title="other-data" numcolumns="12">
            <column name="create-date" numcolumns="3" order="110">
                <widget type="datepicker" fieldname="fechaalta" readonly="true" />
            </column>
            <column name="blocked-date" numcolumns="3" order="120">
                <widget type="datepicker" fieldname="fechabaja" />
            </column>
            <column name="blocked" numcolumns="3" order="130">
                <widget type="checkbox" fieldname="debaja" />
            </column>
        </group>
        <group name="notes">
            <column name="notes" order="100" numcolumns="12">
                <widget type="textarea" fieldname="observaciones" />
            </column>
        </group>
    </columns>
</view>
