<view>
    <columns>
        <column name="user" order="100">
            <widget type="text" fieldname="nick" />
        </column>
        <column name="to" order="110">
            <widget type="text" fieldname="addressee" />
        </column>
        <column name="subject" order="120">
            <widget type="text" fieldname="subject" />
        </column>
        <column name="opened" display="center" order="130">
            <widget type="checkbox" fieldname="opened" />
        </column>
        <column name="date" display="right" order="140">
            <widget type="datetime" fieldname="date" />
        </column>
    </columns>
    <rows>
        <row type="status">
            <option color="success" fieldname="opened">1</option>
        </row>
    </rows>
</view>
