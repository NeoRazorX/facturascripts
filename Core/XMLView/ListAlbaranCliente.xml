<view>
    <columns>
        <column name="id" display="none" order="100">
            <widget type="text" fieldname="idalbaran" />
        </column>
        <column name="code" order="110">
            <widget type="text" fieldname="codigo" />
        </column>
        <column name="number2" order="120">
            <widget type="text" fieldname="numero2" />
        </column>
        <column name="customer" order="130">
            <widget type="text" fieldname="nombrecliente" />
        </column>
        <column name="observations" order="140">
            <widget type="textarea" fieldname="observaciones" />
        </column>
        <column name="status" display="right" order="150">
            <widget type="autocomplete" fieldname="idestado">
                <values source="estados_documentos" fieldcode="idestado" fieldtitle="nombre"></values>
            </widget>
        </column>
        <column name="email-sent" display="center" order="160">
            <widget type="checkbox" fieldname="femail" />
        </column>
        <column name="amount" display="right" order="170">
            <widget type="money" fieldname="total">
                <option color="danger">lt:0</option>
            </widget>
        </column>
        <column name="agent" display="none" order="180">
            <widget type="autocomplete" fieldname="codagente">
                <values source="agentes" fieldcode="codagente" fieldtitle="nombre"></values>
            </widget>
        </column>
        <column name="commission" display="none" order="190">
            <widget type="money" fieldname="totalcomision" />
        </column>
        <column name="date" display="right" order="200">
            <widget type="date" fieldname="fecha" />
        </column>
    </columns>
    <rows>
        <row type="status">
            <option color="secondary" fieldname="codcliente">null:</option>
            <option color="success" fieldname="idestado">8</option>
            <option color="danger" fieldname="idestado">9</option>
            <option color="warning" fieldname="editable">0</option>
            <option color="info" fieldname="femail">notnull:</option>
        </row>
    </rows>
</view>
