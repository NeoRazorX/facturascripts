<view>
    <columns>
        <column name="code" order="100">
            <widget type="text" fieldname="codbalance" onclick="EditBalance" />
        </column>
        <column name="nature" order="110">
            <widget type="text" fieldname="naturaleza" />
        </column>
        <column name="description" order="120">
            <widget type="text" fieldname="descripcion1" />
        </column>
        <column name="description2" order="130">
            <widget type="text" fieldname="descripcion2" />
        </column>
        <column name="description3" order="140">
            <widget type="text" fieldname="descripcion3" />
        </column>
        <column name="level1" order="150">
            <widget type="text" fieldname="nivel1" />
        </column>
        <column name="level2" order="160">
            <widget type="text" fieldname="nivel2" />
        </column>
        <column name="level3" order="170">
            <widget type="text" fieldname="nivel3" />
        </column>
        <column name="level4" order="180">
            <widget type="text" fieldname="nivel4" />
        </column>
    </columns>
    <rows>
        <row type="status">
            <option color="success" title="asset" fieldname="naturaleza">A</option>
            <option color="info" title="liabilities" fieldname="naturaleza">P</option>
            <option color="danger" title="profit-and-loss" fieldname="naturaleza">PG</option>
            <option color="warning" title="income-and-expenses" fieldname="naturaleza">IG</option>
        </row>
    </rows>
</view>
