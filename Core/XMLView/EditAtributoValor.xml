<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="id" display="none" order="100">
                <widget type="text" fieldname="id" readonly="true" required="true"/>
            </column>
            <column name="attribute" numcolumns="3" order="110">
                <widget type="select" fieldname="codatributo" readonly="true" required="true">
                    <values source="atributos" fieldcode="codatributo" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="value" order="120">
                <widget type="text" fieldname="valor" maxlength="100"/>
            </column>
            <column name="sort" numcolumns="3" order="130">
                <widget type="number" decimal="0" min="0" step="1" fieldname="orden"/>
            </column>
        </group>
    </columns>
</view>