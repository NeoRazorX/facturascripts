<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" numcolumns="2" order="100">
                <widget type="text" fieldname="codretencion" icon="fas fa-hashtag" required="true" />
            </column>
            <column name="description" numcolumns="8" order="110">
                <widget type="text" fieldname="descripcion" required="true" />
            </column>
            <column name="percentage" numcolumns="2" order="120">
                <widget type="number" decimal="2" fieldname="porcentaje" icon="fas fa-percent" required="true" />
            </column>
            <column name="subaccount-irpf" description="optional" numcolumns="3" order="130">
                <widget type="autocomplete" fieldname="codsubcuentaret">
                    <values source="subcuentas" fieldcode="codsubcuenta" fieldtitle="descripcion"></values>
                </widget>
            </column>
            <column name="subaccount-irpf-creditor" description="optional" numcolumns="3" order="140">
                <widget type="autocomplete" fieldname="codsubcuentaacr">
                    <values source="subcuentas" fieldcode="codsubcuenta" fieldtitle="descripcion"></values>
                </widget>
            </column>
        </group>
    </columns>
</view>

