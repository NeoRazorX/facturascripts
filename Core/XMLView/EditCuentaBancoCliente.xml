<view>
    <columns>
        <group name="data" numcolumns="12">
            
            <column name="codcuenta" display="none" order="90">
                <widget type="text" fieldname="codcuenta" readonly="true" required="true" />
            </column>
            <column name="codcliente" display="none" order="100">
                <widget type="text" fieldname="codcliente" readonly="true" required="true" />
            </column>
            <column name="account-code" numcolumns="2" order="110" description="customer-banking-account-max-length">
                <widget type="text" fieldname="cuenta" max="10" icon="fa-bank" required="true" hint="max-ten-chars"/>
            </column>
            <column name="description" numcolumns="6" order="120">
                <widget type="text" fieldname="descripcion" required="true" />
            </column>
            <column name="principal" numcolumns="2" order="140">
                <widget type="checkbox" fieldname="principal" />
            </column>
        </group>
        <group name="bankaccount" numcolumns="12">
            <column name="iban" numcolumns="3" order="130" display="">
                <widget type="text" fieldname="iban" />
            </column>
            <column name="swift" numcolumns="3" order="140" display="">
                <widget type="check" fieldname="swift"/>
            </column>
            <column name="bank-fmandato" numcolumns="2" order="150">
                <widget type="datepicker" fieldname="fmandato" />
            </column>
        </group>
    </columns>
</view>