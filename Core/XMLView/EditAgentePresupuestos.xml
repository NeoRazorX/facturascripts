<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" numcolumns="2" order="100">
                <widget type="text" fieldname="codagente" onclick="" icon="fa-user" required="true" />
            </column>
            <column name="name" numcolumns="4" order="110">
                <widget type="text" fieldname="nombre" required="true" />
            </column>
            <column name="surname" numcolumns="6" order="110">
                <widget type="text" fieldname="apellidos" />
            </column>
            <column name="cifnif" numcolumns="2" order="110">
                <widget type="text" fieldname="dnicif" />
            </column>
            <column name="phone" numcolumns="2" order="110">
                <widget type="text" fieldname="telefono" />
            </column>
            <column name="email" numcolumns="4" order="110">
                <widget type="text" fieldname="email" />
            </column>
            <column name="position" numcolumns="4" order="110">
                <widget type="text" fieldname="cargo" />
            </column>
        </group>
        <group name="address" title="address" numcolumns="12">
            <column name="state" numcolumns="3" order="110">
                <widget type="text" fieldname="provincia" />
            </column>
            <column name="city" numcolumns="3" order="110">
                <widget type="text" fieldname="ciudad" />
            </column>
            <column name="address" numcolumns="4" order="110">
                <widget type="text" fieldname="direccion" />
            </column>
            <column name="postalcode" numcolumns="2" order="110">
                <widget type="text" fieldname="codpostal" />
            </column>
        </group>
    </columns>
</view>
