<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" order="100" numcolumns="2">
                <widget type="text" fieldname="codbalance" icon="fas fa-hashtag" />
            </column>
            <column name="nature" numcolumns="3" order="110">
                <widget type="select" fieldname="naturaleza">
                    <values title="asset">A</values>
                    <values title="liabilities">P</values>
                    <values title="profit-and-loss">PG</values>
                    <values title="income-and-expenses">IG</values>
                </widget>
            </column>
        </group>
        <group name="descriptions" numcolumns="12">
            <column name="description-1" order="120" numcolumns="6">
                <widget type="text" fieldname="descripcion1" />
            </column>
            <column name="description-2" order="130" numcolumns="6">
                <widget type="text" fieldname="descripcion2" />
            </column>
            <column name="description-3" order="140" numcolumns="6">
                <widget type="text" fieldname="descripcion3" />
            </column>
            <column name="description-4" order="150" numcolumns="6">
                <widget type="text" fieldname="descripcion4" />
            </column>
            <column name="description-4ba" order="160" numcolumns="6">
                <widget type="text" fieldname="descripcion4ba" />
            </column>
        </group>
    </columns>
</view>

