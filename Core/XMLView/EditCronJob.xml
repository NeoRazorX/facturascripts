<view>
    <columns>
        <group name="data" valign="bottom" numcolumns="12">
            <column name="id" numcolumns="2" order="100">
                <widget type="text" fieldname="id" icon="fas fa-hashtag" readonly="dinamic" />
            </column>
            <column name="plugin" numcolumns="3" order="110">
                <widget type="text" fieldname="pluginname" icon="fas fa-plug" readonly="true"/>
            </column>
            <column name="jobname" title="job-name" numcolumns="4" order="120">
                <widget type="text" fieldname="jobname" readonly="true" />
            </column>
            <column name="date" numcolumns="3" order="130">
                <widget type="date" fieldname="date" readonly="true"  />
            </column>
            <column name="enabled" numcolumns="2" display="center" order="140">
                <widget type="checkbox" fieldname="enabled" />
            </column>
            <column name="done" order="150">
                <widget type="checkbox" fieldname="done" readonly="true" />
            </column>
            <column name="duration" numcolumns="2" display="right" order="160">
                <widget type="number" fieldname="duration" icon="fas fa-clock" readonly="true" />
            </column>
        </group>
    </columns>
</view>