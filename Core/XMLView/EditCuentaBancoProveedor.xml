<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" display="none" order="100">
                <widget type="number" fieldname="codcuenta" decimal="0" readonly="true" />
            </column>
            <column name="supplier" display="none" order="110">
                <widget type="text" fieldname="codproveedor" />
            </column>
            <column name="description" order="120">
                <widget type="text" fieldname="descripcion" maxlength="100" required="true" />
            </column>
            <column name="iban" order="130">
                <widget type="text" fieldname="iban" maxlength="34" />
            </column>
            <column name="swift" order="140">
                <widget type="text" fieldname="swift" maxlength="11" />
            </column>
            <column name="principal" numcolumns="12" order="150">
                <widget type="checkbox" fieldname="principal" />
            </column>
        </group>
    </columns>
</view>