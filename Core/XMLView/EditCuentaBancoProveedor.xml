<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="account-code" numcolumns="2" order="100">
                <widget type="text" fieldname="codcuenta" onclick="" icon="fa-university" required="true" readonly="true" />
            </column>
            <column name="codproveedor" display="none" numcolumns="1" order="110">
                <widget type="text" fieldname="codproveedor" required="true" />
            </column>
            <column name="description" numcolumns="6" order="120">
                <widget type="text" fieldname="descripcion" required="true" />
            </column>
            <column name="principal" numcolumns="2" order="130">
                <widget type="checkbox" fieldname="principal" />
            </column>
        </group>
        <group name="bankaccount" numcolumns="12">
            <column name="iban" numcolumns="6" order="140" display="">
                <widget type="text" fieldname="iban" required="true" />
            </column>
            <column name="swift" numcolumns="6" order="150" display="">
                <widget type="check" fieldname="swift"/>
            </column>
        </group>
    </columns>
</view>