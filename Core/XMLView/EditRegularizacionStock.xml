<view>
    <columns>
        <column name="code" order="100">
            <widget type="text" fieldname="idreg" onclick="EditRegularizacionStock" _readonly="true" />
        </column>
        <column name="date" order="110">
            <widget type="date" fieldname="fecha" _readonly="true" />
        </column>
        <column name="hour" order="120">
            <widget type="text" fieldname="hora" _readonly="true" />
        </column>
        <column name="warehouse" display="left" order="130">
            <widget type="select" fieldname="codalmacen" required="true" _readonly="true">
                <values source="almacenes" fieldcode="codalmacen" fieldtitle="nombre"></values>
            </widget>
        </column>
        <column name="reference" order="140">
            <widget type="text" fieldname="referencia" _readonly="true" />
        </column>
        <column name="product" order="150">
            <widget type="text" fieldname="codcombinacion" _readonly="true" />
        </column>
        <column name="initial-stock" display="right" order="160">
            <widget type="number" fieldname="cantidadini" _readonly="true" />
        </column>
        <column name="final-stock" display="right" order="170">
            <widget type="number" fieldname="cantidadfin" _readonly="true" />
        </column>
        <column name="comment" order="180">
            <widget type="text" fieldname="motivo" _readonly="true" />
        </column>
        <column name="nick" order="150" display="none">
            <widget type="text" fieldname="nick" />
        </column>
    </columns>
</view>
