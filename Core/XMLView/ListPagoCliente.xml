<view>
    <columns>
        <column name="id" display="none" order="100">
            <widget type="text" fieldname="idpago" />
        </column>
        <column name="customer" display="none" order="110">
            <widget type="autocomplete" fieldname="codcliente">
                <values source="clientes" fieldcode="codcliente" fieldtitle="nombre"></values>
            </widget>
        </column>
        <column name="description" order="120">
            <widget type="textarea" fieldname="descripcion" />
        </column>
        <column name="amount" display="right" order="130">
            <widget type="money" fieldname="importe">
                <option color="danger">lt:0</option>
            </widget>
        </column>
        <column name="fee" display="right" order="140">
            <widget type="money" fieldname="gastos">
                <option color="danger">gt:0</option>
            </widget>
        </column>
        <column name="date" display="right" order="150">
            <widget type="date" fieldname="fecha" />
        </column>
    </columns>
</view>
