<view>
    <columns>
        <column name="id" display="none" order="100">
            <widget type="number" fieldname="idasiento" />
        </column>
        <column name="number" display="none" order="100">
            <widget type="number" fieldname="numero" />
        </column>
        <column name="editable" display="none" order="100">
            <widget type="text" fieldname="editable" />
        </column>
        <column name="exercise" display="none" order="100">
            <widget type="text" fieldname="codejercicio" />
        </column>
        <column name="date" numcolumns="2" order="100">
            <widget type="datepicker" fieldname="fecha" icon="fa-calendar" required="true" />
        </column>
        <column name="concept" order="120">
            <widget type="text" fieldname="concepto" required="true" />
        </column>
        <column name="document" numcolumns="2" order="130">
            <widget type="text" fieldname="documento" />
        </column>
        <column name="journals" numcolumns="2" order="140">
            <widget type="select" fieldname="iddiario">
                <values source="diarios" fieldcode="iddiario" fieldtitle="descripcion"></values>
            </widget>
        </column>
        <column name="ammount" numcolumns="2" display="right" order="200">
            <widget type="money" fieldname="importe" icon="fa-money-bill-alt" readonly="readonly" />
        </column>
    </columns>
</view>
