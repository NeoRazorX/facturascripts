<view>
    <columns>
        <column name="id" display="none" order="100">
            <widget type="number" fieldname="idasiento" />
        </column>
        <column name="exercise" display="none" order="100">
            <widget type="text" fieldname="codejercicio" />
        </column>
        <column name="date" numcolumns="2" order="100">
            <widget type="datepicker" fieldname="fecha" icon="fa-calendar" required="true" />
        </column>
        <column name="concept" order="120">
            <widget type="text" fieldname="concepto" required="true" />
        </column>
        <column name="importe" numcolumns="2" display="right" order="200">
            <widget type="money" fieldname="importe" icon="fa-money" readonly="readonly" />
        </column>
    </columns>

    <rows>
        <row type="actions">
            <button type="action" label="lock" color="warning" action="lock" icon="fa-lock" />
            <button type="action" label="clone" color="info" action="clone" icon="fa-clone" />
        </row>
    </rows>
</view>