<view>
    <columns>
        <column name="code" order="100">
            <widget type="text" fieldname="idfile" onclick="EditAttachedFile" />
        </column>
        <column name="file-name" order="110">
            <widget type="text" fieldname="filename" />
        </column>
        <column name="full-path" order="120">
            <widget type="text" fieldname="path" />
        </column>
        <column name="type" order="130">
            <widget type="text" fieldname="mimetype" />
        </column>
        <column name="size" display="right" order="140">
            <widget type="number" fieldname="size" decimal="0" />
        </column>
        <column name="date" display="right" order="150">
            <widget type="date" fieldname="date" />
        </column>
        <column name="hour" display="right" order="160">
            <widget type="text" fieldname="hour" />
        </column>
    </columns>
</view>
