<view>
    <columns>
        <column name="code" order="100">
            <widget type="text" fieldname="codagente" onclick="EditAgente" />
        </column>
        <column name="name" order="110">
            <widget type="text" fieldname="nombre" />
        </column>
        <column name="surname" order="120">
            <widget type="text" fieldname="apellidos" />
        </column>
        <column name="cifnif" order="125">
            <widget type="text" fieldname="cifnif" />
        </column>
        <column name="position" title="position" order="130">
            <widget type="text" fieldname="cargo" />
        </column>
        <column name="phone" order="140">
            <widget type="text" fieldname="telefono1" />
        </column>
        <column name="email" order="150">
            <widget type="text" fieldname="email" />
        </column>
        <column name="address" display="none" order="160">
            <widget type="text" fieldname="direccion" />
        </column>
        <column name="city" display="center" order="170">
            <widget type="text" fieldname="ciudad" />
        </column>
    </columns>
    <rows>
        <row type="status" fieldname="debaja">
            <option color="table-danger">1</option>
        </row>
    </rows>
    <filters>
    </filters>
</view>
