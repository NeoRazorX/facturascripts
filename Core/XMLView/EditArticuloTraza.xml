<view>
    <columns>
        <group name="data" title="product" numcolumns="12">
            <column name="id" numcolumns="0" order="100" display="none">
                <widget type="text" fieldname="id" icon="fa-barcode" onclick="" />
            </column>
            <column name="reference" numcolumns="2" order="110">
                <widget type="text" fieldname="referencia" icon="fa-barcode" onclick="" />
            </column>
            <column name="serial-number" numcolumns="3" order="120">
                <widget type="text" fieldname="numserie" icon="fa-file-code-o" onclick="" />
            </column>
            <column name="lot" numcolumns="3" order="130">
                <widget type="text" fieldname="lote" icon="fa-reorder" onclick="" />
            </column>
        </group>
        <group name="purchase" title="purchases" numcolumns="12">
            <column name="delivery-note" numcolumns="2" order="140">
                <widget type="text" fieldname="idlalbcompra" onclick="" />
            </column>
            <column name="invoice" numcolumns="2" order="150">
                <widget type="text" fieldname="idlfaccompra" onclick="" />
            </column>
            <column name="date-in" numcolumns="2" order="160">
                <widget type="datepicker" fieldname="fecha_entrada" icon="fa-calendar-plus-o" onclick="" />
            </column>            
        </group>
        <group name="sales" title="sales" numcolumns="12">
            <column name="delivery-note" numcolumns="2" order="170">
                <widget type="text" fieldname="idlalbventa" onclick="" />
            </column>
            <column name="invoice" numcolumns="2" order="180">
                <widget type="text" fieldname="idlfacventa" onclick="" />
            </column>
            <column name="date-out" numcolumns="2" order="190">
                <widget type="datepicker" fieldname="fecha_salida" icon="fa-calendar-minus-o" onclick="" />
            </column>            
        </group>
    </columns>
</view>

