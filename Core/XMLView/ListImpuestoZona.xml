<view>
    <columns>
        <column name="code" order="100">
            <widget type="text" fieldname="id" />
        </column>
        <column name="tax" order="110">
            <widget type="select" fieldname="codimpuesto">
                <values source="impuestos" fieldcode="codimpuesto" fieldtitle="descripcion" />
            </widget>
        </column>
        <column name="country" order="120">
            <widget type="select" fieldname="codpais" icon="fas fa-globe-americas" >
                <values source="paises" fieldcode="codpais" fieldtitle="nombre" />
            </widget>
        </column>
        <column name="province" order="130">
            <widget type="select" fieldname="codisopro">
                <values source="provincias" fieldcode="idprovincia" fieldtitle="provincia" />
            </widget>
        </column>
        <column name="applied-tax" order="140">
            <widget type="select" fieldname="codimpuestosel">
                <values source="impuestos" fieldcode="codimpuesto" fieldtitle="descripcion" />
            </widget>
        </column>
        <column name="priority" display="right" order="150">
            <widget type="number" fieldname="prioridad" decimal="0" />
        </column>
    </columns>
    <rows>
        <row type="status">
            <option color="warning" fieldname="codimpuestosel">null:</option>
        </row>
    </rows>
</view>
