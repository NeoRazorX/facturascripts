<view>
    <columns>
        <column name="id" numcolumns="2" order="10">
            <widget type="text" fieldname="id" icon="fas fa-dollar-sign" onclick="EditImpuestoZona" />
        </column>
        <column name="tax" numcolumns="2" order="20">
            <widget type="select" fieldname="codimpuesto">
                <values source="impuestos" fieldcode="codimpuesto" fieldtitle="descripcion"></values>
            </widget>
        </column>
        <column name="country" numcolumns="2" order="30">
            <widget type="select" fieldname="codpais" icon="fas fa-globe-americas" >
                <values source="paises" fieldcode="codpais" fieldtitle="nombre"></values>
            </widget>
        </column>
        <column name="province" numcolumns="2" order="40">
            <widget type="select" fieldname="codisopro">
                <values source="provincias" fieldcode="idprovincia" fieldtitle="provincia"></values>
            </widget>
        </column>
        <column name="applied-tax" numcolumns="2" order="50">
            <widget type="select" fieldname="codimpuestosel">
                <values source="impuestos" fieldcode="codimpuesto" fieldtitle="descripcion"></values>
            </widget>
        </column>
        <column name="priority" numcolumns="2" order="60">
            <widget type="number" fieldname="prioridad" />
        </column>
    </columns>
    <filters>
    </filters>
</view>

