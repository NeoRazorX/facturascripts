<view>
    <columns>
        <group name="bankaccount" numcolumns="12">
            <column name="code" display="none" order="100">
                <widget type="number" fieldname="codcuenta" decimal="0" readonly="true"/>
            </column>
            <column name="description" order="110">
                <widget type="text" fieldname="descripcion" maxlength="100" required="true"/>
            </column>
            <column name="swift" numcolumns="2" order="120">
                <widget type="text" fieldname="swift" maxlength="11"/>
            </column>
            <column name="iban" order="130">
                <widget type="text" fieldname="iban" maxlength="34"/>
            </column>
        </group>
        <group name="extra" numcolumns="12">
            <column name="sepa-suffix" numcolumns="2" order="100">
                <widget type="text" fieldname="sufijosepa" maxlength="3"/>
            </column>
            <column name="subaccount" description="related-subaccount-purchases-sales" titleurl="ListCuenta" order="110">
                <widget type="autocomplete" fieldname="codsubcuenta">
                    <values source="subcuentas" fieldcode="codsubcuenta"/>
                </widget>
            </column>
            <column name="expense-subaccount" description="related-subaccount-bank-charges" titleurl="ListCuenta" order="120">
                <widget type="autocomplete" fieldname="codsubcuentagasto">
                    <values source="subcuentas" fieldcode="codsubcuenta"/>
                </widget>
            </column>
            <column name="company" numcolumns="2" order="130">
                <widget type="select" fieldname="idempresa" icon="fas fa-building" onclick="EditEmpresa" required="true"
                        readonly="dinamic">
                    <values source="empresas" fieldcode="idempresa" fieldtitle="nombrecorto"/>
                </widget>
            </column>
        </group>
    </columns>
</view>