<view>
    <columns>
        <column name="code" order="100">
            <widget type="text" fieldname="codejercicio" onclick="EditEjercicio" />
        </column>
        <column name="name" order="110">
            <widget type="text" fieldname="nombre" />
        </column>
        <column name="start-date" display="center" order="120">
            <widget type="text" fieldname="fechainicio" />
        </column>
        <column name="end-date" display="center" order="130">
            <widget type="text" fieldname="fechafin" />
        </column>
        <column name="state" display="center" order="140">
            <widget type="text" fieldname="estado">
                <option color="red" font-weight="bold">ABIERTO</option>
                <option color="blue">CERRADO</option>
            </widget>
        </column>
        <column name="plan" display="center" order="150">
            <widget type="text" fieldname="plancontable" />
        </column>
        <column name="account-length" display="center" order="160">
            <widget type="text" fieldname="longsubcuenta" />
        </column>
    </columns>
</view>
