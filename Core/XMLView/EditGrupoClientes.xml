                    <values source="gruposclientes" fieldcode="codgrupo" fieldtitle="nombre"></values>
                </widget>
            </column>
            <column name="subaccount" numcolumns="3" order="130">
                <widget type="text" fieldname="codsubcuenta" />
            </column>
        </group>
    </columns>
</view>
