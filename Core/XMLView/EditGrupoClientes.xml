        <group name="data" numcolumns="12">
            <column name="code" numcolumns="2" order="100">
                <widget type="text" fieldname="codgrupo" icon="fas fa-hashtag" readonly="dinamic" required="true" />
            </column>
            <column name="description" numcolumns="4" order="110">
                <widget type="text" fieldname="nombre" required="true" />
            </column>
            <column name="parent-group" numcolumns="3" order="120">
