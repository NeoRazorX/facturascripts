<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" display="none" order="100">
                <widget type="text" fieldname="id" />
            </column>
            <column name="description" numcolumns="3" order="110">
                <widget type="text" fieldname="description" required="true" />
            </column>
            <column name="api-key" numcolumns="4" order="120">
                <widget type="text" fieldname="apikey" icon="fas fa-key" required="true" />
            </column>
            <column name="created" numcolumns="3" order="130">
                <widget type="date" fieldname="creationdate" />
            </column>
            <column name="user" numcolumns="2" order="140">
                <widget type="select" fieldname="nick" required="true">
                    <values source="users" fieldcode="nick" fieldtitle="nick"></values>
                </widget>
            </column>
            <column name="enabled" numcolumns="2" order="150">
                <widget type="checkbox" fieldname="enabled" />
            </column>
        </group>
    </columns>
</view>