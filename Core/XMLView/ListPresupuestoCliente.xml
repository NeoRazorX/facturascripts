<view>
    <columns>
        <column name="id" display="none" order="90">
            <widget type="text" fieldname="idpresupuesto"/>
        </column>
        <column name="company" display="none" order="100">
            <widget type="select" fieldname="idempresa">
                <values source="empresas" fieldcode="idempresa" fieldtitle="nombrecorto"/>
            </widget>
        </column>
        <column name="warehouse" display="none" order="110">
            <widget type="select" fieldname="codalmacen">
                <values source="almacenes" fieldcode="codalmacen" fieldtitle="nombre"/>
            </widget>
        </column>
        <column name="serie" display="none" order="120">
            <widget type="select" fieldname="codserie">
                <values source="series" fieldcode="codserie" fieldtitle="codserie"/>
            </widget>
        </column>
        <column name="exercise" display="none" order="130">
            <widget type="select" fieldname="codejercicio">
                <values source="ejercicios" fieldcode="codejercicio" fieldtitle="codejercicio"/>
            </widget>
        </column>
        <column name="number" display="none" order="140">
            <widget type="text" fieldname="numero"/>
        </column>
        <column name="code" order="150">
            <widget type="text" fieldname="codigo"/>
        </column>
        <column name="number2" order="160">
            <widget type="text" fieldname="numero2"/>
        </column>
        <column name="customer-code" display="none" order="170">
            <widget type="text" fieldname="codcliente"/>
        </column>
        <column name="customer" order="180">
            <widget type="text" fieldname="nombrecliente"/>
        </column>
        <column name="fiscal-number" display="none" order="190">
            <widget type="text" fieldname="cifnif"/>
        </column>
        <column name="address" display="none" order="200">
            <widget type="text" fieldname="direccion"/>
        </column>
        <column name="post-office-box" display="none" order="210">
            <widget type="text" fieldname="apartado"/>
        </column>
        <column name="zip-code" display="none" order="220">
            <widget type="text" fieldname="codpostal"/>
        </column>
        <column name="city" display="none" order="230">
            <widget type="text" fieldname="ciudad"/>
        </column>
        <column name="province" display="none" order="240">
            <widget type="text" fieldname="provincia"/>
        </column>
        <column name="country" display="none" order="250">
            <widget type="select" fieldname="codpais">
                <values source="paises" fieldcode="codpais" fieldtitle="nombre"/>
            </widget>
        </column>
        <column name="observations" order="260">
            <widget type="textarea" fieldname="observaciones"/>
        </column>
        <column name="status" display="right" order="270">
            <widget type="autocomplete" fieldname="idestado">
                <values source="estados_documentos" fieldcode="idestado" fieldtitle="nombre"/>
            </widget>
        </column>
        <column name="number-attachments" display="none" order="275">
            <widget type="number" fieldname="numdocs" decimal="0"/>
        </column>
        <column name="email-sent" display="center" order="280">
            <widget type="checkbox" fieldname="femail"/>
        </column>
        <column name="payment-method" display="none" order="285">
            <widget type="select" fieldname="codpago">
                <values source="formaspago" fieldcode="codpago" fieldtitle="descripcion"/>
            </widget>
        </column>
        <column name="subtotal" display="none" order="290">
            <widget type="money" fieldname="netosindto"/>
        </column>
        <column name="global-dto" display="none" order="300">
            <widget type="percentage" fieldname="dtopor1"/>
        </column>
        <column name="global-dto-2" display="none" order="310">
            <widget type="percentage" fieldname="dtopor2"/>
        </column>
        <column name="total-cost" display="none" order="320">
            <widget type="money" fieldname="totalcoste"/>
        </column>
        <column name="profits" display="none" order="330">
            <widget type="money" fieldname="totalbeneficio"/>
        </column>
        <column name="net" display="none" order="340">
            <widget type="money" fieldname="neto"/>
        </column>
        <column name="taxes" display="none" order="350">
            <widget type="money" fieldname="totaliva"/>
        </column>
        <column name="surcharge" display="none" order="360">
            <widget type="money" fieldname="totalrecargo"/>
        </column>
        <column name="retention" display="none" order="370">
            <widget type="percentage" fieldname="irpf"/>
        </column>
        <column name="retentions" display="none" order="380">
            <widget type="money" fieldname="totalirpf"/>
        </column>
        <column name="supplied-amount" display="none" order="390">
            <widget type="money" fieldname="totalsuplidos"/>
        </column>
        <column name="total" display="right" order="400">
            <widget type="money" fieldname="total">
                <option color="danger">lt:0</option>
            </widget>
        </column>
        <column name="currency" display="none" order="410">
            <widget type="select" fieldname="coddivisa">
                <values source="divisas" fieldcode="coddivisa" fieldtitle="coddivisa"/>
            </widget>
        </column>
        <column name="agent" display="none" order="420">
            <widget type="autocomplete" fieldname="codagente">
                <values source="agentes" fieldcode="codagente" fieldtitle="nombre"/>
            </widget>
        </column>
        <column name="expiration" display="none" order="430">
            <widget type="date" fieldname="finoferta"/>
        </column>
        <column name="date" display="right" order="440">
            <widget type="date" fieldname="fecha"/>
        </column>
    </columns>
    <rows>
        <row type="status">
            <option color="success" title="approved" fieldname="idestado">2</option>
            <option color="danger" title="cancelled" fieldname="idestado">3</option>
            <option color="danger" title="expired" fieldname="idestado">23</option>
            <option color="warning" title="non-editable-document" fieldname="editable">0</option>
            <option color="info" title="email-sent" fieldname="femail">notnull:</option>
        </row>
    </rows>
</view>