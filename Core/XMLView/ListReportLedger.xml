<view>
    <columns>
        <column name="code" display="none" order="100">
            <widget type="text" fieldname="id"/>
        </column>
        <column name="company" display="none" order="110">
            <widget type="select" fieldname="idcompany">
                <values source="empresas" fieldcode="idempresa" fieldtitle="nombrecorto"/>
            </widget>
        </column>
        <column name="name" order="120">
            <widget type="text" fieldname="name"/>
        </column>
        <column name="from-date" display="center" order="130">
            <widget type="text" fieldname="startdate"/>
        </column>
        <column name="until-date" display="center" order="140">
            <widget type="text" fieldname="enddate"/>
        </column>
        <column name="channel" display="none" order="150">
            <widget type="text" fieldname="channel"/>
        </column>
        <column name="grouping-type" order="160">
            <widget type="select" fieldname="groupingtype" translate="true">
                <values title="do-not-group">N</values>
                <values title="report-grouping-account">C</values>
                <values title="group-by-subaccount">S</values>
            </widget>
        </column>
        <column name="from-subaccount" display="center" order="170">
            <widget type="text" fieldname="startcodsubaccount"/>
        </column>
        <column name="until-subaccount" display="center" order="180">
            <widget type="text" fieldname="endcodsubaccount"/>
        </column>
        <column name="from-accounting-entry" display="center" order="190">
            <widget type="text" fieldname="startentry"/>
        </column>
        <column name="until-accounting-entry" display="center" order="200">
            <widget type="text" fieldname="endentry"/>
        </column>
    </columns>
</view>