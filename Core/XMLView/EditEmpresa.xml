<view>
   
    <columns>
        <group name="data" numcolumns="6" icon="fa-file-o" title="Datos fiscales">
            <column name="code" numcolumns="2" order="100">
                <widget type="text" fieldname="id" icon="fa-object-group" required="true" />
            </column>
            <column name="name" numcolumns="4" order="110" description="Razón social de la empresa">
                
                <widget type="text" fieldname="nombre" required="true"  hint="Razón social" />
            </column>
            <column name="short-name" numcolumns="3" order="120" description="Nombre uso interno">
                <widget type="text" fieldname="nombrecorto" />
            </column>
            <column name="cif" numcolumns="3" order="120" >
                <widget type="text" fieldname="cifnif" />
            </column>
            
            <column name="administrator" numcolumns="6" order="125" description="Administrador">
                <widget type="text" fieldname="administrador" hint="Administrador de la empresa"/>
            </column>
            <column name="address" numcolumns="6" order="130" description="Dirección fiscal">
                <widget type="text" fieldname="direccion" hint="Calle y número"/>
            </column>
                
            <column name="boxoffice" numcolumns="3" order="139" description="Apartado de correos">    
                <widget type="text" fieldname="apartado" hint="Apartado de correos"/>
            </column>
            <column name="zipcode" numcolumns="3" order="140" description="Código postal">    
                <widget type="text" fieldname="codpostal" hint="Código postal"/>
            </column>
            <column name="city" numcolumns="6" order="150" description="Ciudad">    
                <widget type="text" fieldname="ciudad" hint="Municipio/ciudad"/>
           </column>
           <column name="county" numcolumns="6" order="160" description="Provincia">
                <widget type="text" fieldname="provincia" hint="provincia"/>
            </column>
            <column name="country" numcolumns="6" order="170" description="Pais de la empresa">
                <widget type="select" fieldname="codpais">
                    <values source="paises" fieldcode="codpais" fieldtitle="nombre">
                        
                    </values>
                </widget>
            </column>
                
        </group>
        <group name="contactdata" numcolumns="6" icon="fa-address-card" title="Datos de contacto">
            <column name="telephone" numcolumns="6" order="100" description="Teléfono empresa">   
                <widget type="text" fieldname="telefono"/>
            </column>
            <column name="fax" numcolumns="6" order="110" description="Fax empresa">   
                <widget type="text" fieldname="fax"/>
            </column>
            <column name="email" numcolumns="4" order="120" description="Correo electrónico empresa">   
                <widget type="text" fieldname="email" hint="correo electrónico"/>
            </column>
            <column name="webpage" numcolumns="6" order="130" description="Página web empresa">   
                <widget type="text" fieldname="web" hint="http;//"/>
            </column>
            <column name="schedule" numcolumns="2" order="140" description="PHorario">   
                <widget type="text" fieldname="horario" hint=""/>
            </column>
             <column name="motto" numcolumns="12" order="150" description="Lema empresa">   
                <widget type="textarea" fieldname="lema" hint=""/>
            </column>
             <column name="invoicefoot" numcolumns="12" order="160" description="Texto pie de documentos">   
                <widget type="textarea" fieldname="pie_factura" hint=""/>
            </column>
            
            
        </group>
        <group name="logo" numcolumns="12" title="Logotipo"> 
            <column name="logo" numcolumns="4" order="149" description="Logotipo de la empresa">
                <widget type="image" fieldname="logo"/>
            </column>
           
        </group>
        <group name="management" columns="12" icon="fa-cog" title="Parámetros gestion/contabilidad">
            <column name="warehouse" numcolumns="3">
                <widget type="select" fieldname="codalmacen">
                    <values source="almacenes" fieldcode="codalmacen" fieldtitle="nombre">
                        
                    </values>
                </widget>
            </column>
            <column name="stockorders" columns="1" order="170">
                <widget type="checkbox" fieldname="stockpedidos"/>
            </column>
            <column name="startdate" numcolumns="2" order="180" description="Fecha de inicio de actividad">   
                <widget type="date" fieldname="inicioact" hint=""/>
            </column>
            <column name="exercise" numcolumns="2" order="190" description="Ejercicio por defecto">   
                <widget type="select" fieldname="codejercicio"> 
                    <values source="ejercicios" fieldcode="codejercicio" fieldtitle="nombre"></values>
                  
                </widget>
            </column>
            <column name="currency" numcolumns="2" order="200" description="Divisa por defecto">   
                <widget type="select" fieldname="coddivisa"> 
                    <values source="divisas" fieldcode="coddivisa" fieldtitle="descripcion"></values>
                  
                </widget>
            </column>
            <column name="serialcode" numcolumns="2" order="210" description="Serie documentos por defecto">   
                <widget type="select" fieldname="codserie"> 
                    <values source="series" fieldcode="codserie" fieldtitle="descripcion"></values>
                  
                </widget>
            </column>
            <column name="paycode" numcolumns="2" order="220" description="Forma de pago por defecto">   
                <widget type="select" fieldname="codpago"> 
                    <values source="formaspago" fieldcode="codpago" fieldtitle="descripcion"></values>
                  
                </widget>
            </column>
            <column name="integratedaccounting" columns="1" order="230">
                <widget type="checkbox" fieldname="contintegrada"/>
            </column>
            <column name="surcharge" columns="1" order="240">
                <widget type="checkbox" fieldname="recequivalencia"/>
            </column>
            <column name="codedi" numcolumns="2" order="250" description="Cod EDI">   
                <widget type="text" fieldname="codedi" hint=""/>
            </column>
        </group>    
    </columns>
</view>

