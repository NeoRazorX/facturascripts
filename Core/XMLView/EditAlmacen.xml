<view>
    <columns>
        <group name="data" title="warehouse" numcolumns="12">
            <column name="code" numcolumns="3" order="100">
                <widget type="text" fieldname="codalmacen" onclick="" required="true" />
            </column>

            <column name="name" numcolumns="3" order="110">
                <widget type="text" fieldname="nombre" onclick="" required="true" />
            </column>

            <column name="observations" numcolumns="6" order="130">
                <widget type="text" fieldname="observaciones" onclick="" />
            </column>
        </group>

        <group name="contact-data" title="contact-data" numcolumns="12">
            <column name="contact" numcolumns="3" order="100">
                <widget type="text" fieldname="contacto" onclick="" />
            </column>

            <column name="phone" numcolumns="3" order="110">
                <widget type="text" fieldname="telefono" onclick="" />
            </column>

            <column name="fax" numcolumns="3" order="120">
                <widget type="text" fieldname="fax" onclick="" />
            </column>

            <column name="email" numcolumns="3" order="130">
                <widget type="text" fieldname="email" onclick="" />
            </column>

            <column name="web" numcolumns="3" order="140">
                <widget type="text" fieldname="web" onclick="" />
            </column>

            <column name="address" numcolumns="3" order="150">
                <widget type="text" fieldname="direccion" onclick="" />
            </column>

            <column name="postalcode" numcolumns="3" order="160">
                <widget type="text" fieldname="codpostal" onclick="" />
            </column>

            <column name="postalmail" numcolumns="3" order="170">
                <widget type="text" fieldname="apartado" onclick="" />
            </column>

            <column name="city" numcolumns="3" order="180">
                <widget type="text" fieldname="ciudad" onclick="" />
            </column>

            <column name="town" numcolumns="3" order="190">
                <widget type="text" fieldname="poblacion" onclick="" />
            </column>

            <column name="province" numcolumns="3" order="200">
                <widget type="text" fieldname="provincia" onclick="" />
            </column>

            <column name="country" numcolumns="3" order="170">
                <widget type="select" fieldname="codpais" required="true">
                    <values source="paises" fieldcode="codpais" fieldtitle="nombre"></values>
                </widget>
            </column>
        </group>
    </columns>
</view>

