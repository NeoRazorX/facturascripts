<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" display="none" order="100">
                <widget type="text" fieldname="id" icon="fas fa-hashtag" required="true" />
            </column>
            <column name="tax" order="110">
                <widget type="select" fieldname="codimpuesto" onclick="EditImpuesto" required="true">
                    <values source="impuestos" fieldcode="codimpuesto" fieldtitle="descripcion"></values>
                </widget>
            </column>
            <column name="country" titleurl="ListPais" order="120">
                <widget type="select" fieldname="codpais" icon="fas fa-globe-americas">
                    <values source="paises" fieldcode="codpais" fieldtitle="nombre"></values>
                </widget>
            </column>
            <column name="province" titleurl="ListPais?activetab=ListProvincia" order="130">
                <widget type="autocomplete" fieldname="codisopro">
                    <values source="provincias" fieldcode="idprovincia" fieldtitle="provincia"></values>
                </widget>
            </column>
            <column name="applied-tax" order="140">
                <widget type="select" fieldname="codimpuestosel">
                    <values source="impuestos" fieldcode="codimpuesto" fieldtitle="descripcion"></values>
                </widget>
            </column>
            <column name="priority" order="150">
                <widget type="number" fieldname="prioridad" icon="fas fa-sort-numeric-down-alt" required="true" />
            </column>
        </group>
    </columns>
</view>
