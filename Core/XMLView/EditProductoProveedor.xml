<view>
    <columns>
        <group name="main" numcolumns="12">
            <column name="supplier" order="100">
                <widget type="autocomplete" fieldname="codproveedor" onclick="EditProveedor" readonly="dinamic"
                        required="true">
                    <values source="proveedores" fieldcode="codproveedor" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="reference" title="variant" order="110">
                <widget type="select" fieldname="referencia" readonly="dinamic" required="true">
                    <values/>
                </widget>
            </column>
            <column name="currency" order="120">
                <widget type="select" fieldname="coddivisa" onclick="EditDivisa" readonly="dinamic">
                    <values source="divisas" fieldcode="coddivisa" fieldtitle="descripcion"/>
                </widget>
            </column>
            <column name="supplier-reference" order="130">
                <widget type="text" fieldname="refproveedor"/>
            </column>
            <column name="price" order="140">
                <widget type="money" fieldname="precio"/>
            </column>
            <column name="dto" order="150">
                <widget type="percentage" fieldname="dtopor"/>
            </column>
            <column name="dto-2" display="none" order="160">
                <widget type="percentage" fieldname="dtopor2"/>
            </column>
            <column name="net" order="170">
                <widget type="money" fieldname="neto" readonly="true"/>
            </column>
            <column name="update-time" display="none" order="180">
                <widget type="datetime" fieldname="actualizado" readonly="true"/>
            </column>
        </group>
    </columns>
</view>