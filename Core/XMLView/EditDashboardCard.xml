<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="id" numcolumns="2" order="100">
                <widget type="text" fieldname="id" readonly="true" required="true"/>
            </column>
            <column name="nick" numcolumns="5" order="100">
                <widget type="select" fieldname="nick" icon="fa-user">
                    <values source="fs_users" fieldcode="nick" fieldtitle="nick"></values>
                </widget>
            </column>
            <column name="date" numcolumns="5" order="110">
                <widget type="datepicker" fieldname="fecha"/>
            </column>
            <column name="description" numcolumns="12" order="110">
                <widget type="textarea" fieldname="descripcion"/>
            </column>
        </group>
    </columns>
</view>