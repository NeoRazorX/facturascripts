<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" numcolumns="3" order="100">
                <widget type="text" fieldname="coddivisa" icon="fas fa-hashtag" maxlength="3" required="true" />
            </column>
            <column name="symbol" numcolumns="3" order="100" description="symbol">
                <widget type="text" fieldname="simbolo" />
            </column>
            <column name="description" numcolumns="6" order="100">
                <widget type="text" fieldname="descripcion" required="true" />
            </column>
        </group>
        <group name="seccondary" numcolumns="12">
            <column name="iso" numcolumns="4" order="100">
                <widget type="number" decimal="0" fieldname="codiso" />
            </column>
            <column name="sales-rate" numcolumns="4" order="100">
                <widget type="text" fieldname="tasaconv" />
            </column>
            <column name="purchase-rate" numcolumns="4" order="100">
                <widget type="text" fieldname="tasaconvcompra" />
            </column>
        </group>
    </columns>
</view>