<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="id" display="none" order="100">
                <widget type="text" fieldname="idprovincia" required="true" />
            </column>
            <column name="country" titleurl="ListPais" numcolumns="2" order="110">
                <widget type="select" fieldname="codpais" icon="fas fa-globe-americas" onclick="EditPais" required="true">
                    <values source="paises" fieldcode="codpais" fieldtitle="nombre"></values>
                </widget>
            </column>
            <column name="province" order="120">
                <widget type="text" fieldname="provincia" required="true" />
            </column>
            <column name="iso" numcolumns="2" order="130" titleurl="https://es.wikipedia.org/wiki/Provincia_de_España#Denominaci.C3.B3n_y_lista_de_las_provincias">
                <widget type="text" fieldname="codisoprov" maxlength="10" required="true" />
            </column>
            <column name="code" numcolumns="2" description="optional" order="140">
                <widget type="text" maxlength="2" fieldname="codeid" icon="fas fa-hashtag"/>
            </column>
        </group>
    </columns>
</view>