<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : albaranescli.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the albaranescli table.
-->

<view>
    <columns>
        <column name="code" order="100">
            <widget type="text" fieldname="codproveedor" onclick="EditProveedor" />
        </column>
        <column name="name" order="110">
            <widget type="text" fieldname="nombre" />
        </column>
        <column name="cifnif" order="130">
            <widget type="text" fieldname="cifnif" />
        </column>
        <column name="email" order="140">
            <widget type="text" fieldname="email" />
        </column>
        <column name="phone" order="150">
            <widget type="text" fieldname="telefono1" />
        </column>
        <column name="phone2" display="none" order="160">
            <widget type="text" fieldname="telefono2" />
        </column>
        <column name="observations" order="180">
            <widget type="textarea" fieldname="observaciones" />
        </column>
        <column name="blocked" display="none" order="190">
            <widget type="checkbox" fieldname="debaja" />
        </column>
    </columns>
    <rows>
        <row type="status" fieldname="debaja">
            <option color="danger">1</option>
        </row>
    </rows>
</view>
