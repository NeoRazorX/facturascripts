<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : attached_files.xml
    Author     : Francesc Pineda Segarra
    Description:
        Structure for the attached_files table.
-->
<table>
    <column>
        <name>date</name>
        <type>date</type>
        <null>NO</null>
    </column>
    <column>
        <name>filename</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>hour</name>
        <type>time</type>
    </column>
    <column>
        <name>idfile</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>mimetype</name>
        <type>character varying(100)</type>
    </column>
    <column>
        <name>path</name>
        <type>character varying(200)</type>
        <null>NO</null>
    </column>
    <column>
        <name>size</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <constraint>
        <name>attached_files_pkey</name>
        <type>PRIMARY KEY (idfile)</type>
    </constraint>
</table>