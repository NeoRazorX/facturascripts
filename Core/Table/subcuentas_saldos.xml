    Description:
        Structure for the subcuentassaldos table.
-->
<table>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('subcuentas_saldos_id_seq'::regclass)</default>
    </column>
    <column>
        <name>mes</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>idsubcuenta</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>idcuenta</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>debe</name>
        <type>double precision</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <column>
        <name>haber</name>
        <type>double precision</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <column>
        <name>saldo</name>
        <type>double precision</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <constraint>
        <name>subcuentas_saldos_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>ca_subcuentas_saldos_subcuentas</name>
        <type>FOREIGN KEY (idsubcuenta)
            REFERENCES subcuentas (idsubcuenta)
            ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_subcuentas_saldos_cuentas</name>
        <type>FOREIGN KEY (idcuenta)
            REFERENCES cuentas (idcuenta)
            ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>uniq_subcuenta_saldos</name>
        <type>UNIQUE (idsubcuenta, mes)</type>
    </constraint>
</table>
