<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : cronjobs.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the cronjobs table.
-->
<table>
    <column>
        <name>date</name>
        <type>timestamp</type>
    </column>
    <column>
        <name>done</name>
        <type>boolean</type>
        <default>false</default>
    </column>
    <column>
        <name>enabled</name>
        <type>boolean</type>
        <default>true</default>
    </column>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>jobname</name>
        <type>character varying(50)</type>
        <null>NO</null>
    </column>
    <column>
        <name>pluginname</name>
        <type>character varying(50)</type>
        <null>NO</null>
    </column>
    <constraint>
        <name>cronjobs_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
</table>