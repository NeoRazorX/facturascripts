<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : dirclientes.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the dirclientes table.
-->
<table>
    <column>
        <name>codcliente</name>
        <type>character varying(10)</type>
        <null>NO</null>
    </column>
    <column>
        <name>codpais</name>
        <type>character varying(20)</type>
    </column>
    <column>
        <name>apartado</name>
        <type>character varying(10)</type>
    </column>
    <column>
        <name>provincia</name>
        <type>character varying(100)</type>
    </column>
    <column>
        <name>ciudad</name>
        <type>character varying(100)</type>
    </column>
    <column>
        <name>codpostal</name>
        <type>character varying(10)</type>
    </column>
    <column>
        <name>direccion</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>domenvio</name>
        <type>boolean</type>
    </column>
    <column>
        <name>domfacturacion</name>
        <type>boolean</type>
    </column>
    <column>
        <name>descripcion</name>
        <type>character varying(100)</type>
    </column>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('dirclientes_id_seq'::regclass)</default>
    </column>
    <column>
        <name>fecha</name>
        <type>date</type>
    </column>
    <constraint>
        <name>dirclientes_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>ca_dirclientes_clientes</name>
        <type>FOREIGN KEY (codcliente) REFERENCES clientes (codcliente) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>