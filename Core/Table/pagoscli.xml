<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : pagoscli.xml
    Description:
        Estructura de la tabla pagoscli.
-->
<table>
    <column>
        <name>codcliente</name>
        <type>character varying(10)</type>
        <null>NO</null>
    </column>
    <column>
        <name>coddivisa</name>
        <type>character varying(3)</type>
    </column>
    <column>
        <name>codpago</name>
        <type>character varying(10)</type>
    </column>
    <column>
        <name>customid</name>
        <type>character varying(30)</type>
    </column>
    <column>
        <name>customstatus</name>
        <type>character varying(30)</type>
    </column>
    <column>
        <name>descripcion</name>
        <type>text</type>
    </column>
    <column>
        <name>fecha</name>
        <type>date</type>
        <null>NO</null>
    </column>
    <column>
        <name>gastos</name>
        <type>double precision</type>
        <default>0</default>
    </column>
    <column>
        <name>idasiento</name>
        <type>integer</type>
    </column>
    <column>
        <name>idfactura</name>
        <type>integer</type>
    </column>
    <column>
        <name>idpago</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('pagoscli_idpago_seq'::regclass)</default>
    </column>
    <column>
        <name>importe</name>
        <type>double precision</type>
        <default>0</default>
    </column>
    <column>
        <name>nick</name>
        <type>character varying(50)</type>
    </column>
    <constraint>
        <name>pagoscli_pkey</name>
        <type>PRIMARY KEY (idpago)</type>
    </constraint>
    <constraint>
        <name>ca_pagoscli_asiento</name>
        <type>FOREIGN KEY (idasiento) REFERENCES asientos (idasiento) ON DELETE SET NULL ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_pagoscli_facturascli</name>
        <type>FOREIGN KEY (idfactura) REFERENCES facturascli (idfactura) ON DELETE SET NULL ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_pagoscli_clientes</name>
        <type>FOREIGN KEY (codcliente) REFERENCES clientes (codcliente) ON DELETE RESTRICT ON UPDATE CASCADE</type>
    </constraint>
</table>
