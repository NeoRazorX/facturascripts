<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : formaspago.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the formaspago table.
-->
<table>
    <column>
        <name>codpago</name>
        <type>character varying(10)</type>
        <null>NO</null>
    </column>
    <column>
        <name>descripcion</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>genrecibos</name>
        <type>character varying(10)</type>
        <null>NO</null>
    </column>
    <column>
        <name>codcuenta</name>
        <type>character varying(10)</type>
    </column>
    <column>
        <name>domiciliado</name>
        <type>boolean</type>
    </column>
    <column>
        <name>imprimir</name>
        <type>boolean</type>
        <default>true</default>
    </column>
    <column>
        <name>vencimiento</name>
        <type>character varying(20)</type>
        <default>'+1 month'::character varying</default>
    </column>
    <constraint>
        <name>formaspago_pkey</name>
        <type>PRIMARY KEY (codpago)</type>
    </constraint>
</table>