<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : articulo_combinaciones.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the articulo_combinaciones table.
-->
<table>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('articulo_combinaciones_seq'::regclass)</default>
    </column>
    <column>
        <name>codigo</name>
        <type>character varying(18)</type>
        <null>NO</null>
    </column>
    <column>
        <name>codigo2</name>
        <type>character varying(18)</type>
    </column>
    <column>
        <name>referencia</name>
        <type>character varying(18)</type>
        <null>NO</null>
    </column>
    <column>
        <name>idvalor</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>nombreatributo</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>valor</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>refcombinacion</name>
        <type>character varying(18)</type>
        <null>YES</null>
    </column>
    <column>
        <name>codbarras</name>
        <type>character varying(18)</type>
        <null>YES</null>
    </column>
    <column>
        <name>impactoprecio</name>
        <type>double precision</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <column>
        <name>stockfis</name>
        <type>double precision</type>
        <null>YES</null>
        <default>0</default>
    </column>
    <constraint>
        <name>articulo_combinaciones_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>ca_articulo_combinaciones_valores</name>
        <type>FOREIGN KEY (idvalor)
            REFERENCES atributos_valores (id)
            ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_articulo_combinaciones_articulos</name>
        <type>FOREIGN KEY (referencia)
            REFERENCES articulos (referencia)
            ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>