    Description:
        Structure for the articulos table.
        Algunas columnas de la tabla no se utilizan en FacturaScripts,
        pero las aÃ±ado para dar compatilidad con Abanq/Eneboo.
-->
<table>
    <column>
        <name>factualizado</name>
        <type>date</type>
        <null>YES</null>
    </column>
    <column>
        <name>bloqueado</name>
        <type>boolean</type>
        <null>YES</null>
        <default>false</default>
    </column>
    <column>
        <name>equivalencia</name>
        <type>character varying(25)</type>
        <null>YES</null>
    </column>
    <column>
        <name>idsubcuentairpfcom</name>
        <type>integer</type>
        <null>YES</null>
    </column>
    <column>
        <name>idsubcuentacom</name>
        <type>integer</type>
        <null>YES</null>
    </column>
    <column>
        <name>stockmin</name>
        <type>double precision</type>
        <null>YES</null>
        <default>0</default>
    </column>
    <column>
        <name>observaciones</name>
        <type>text</type>
        <null>YES</null>
    </column>
    <column>
        <name>codbarras</name>
        <type>character varying(18)</type>
        <null>YES</null>
    </column>
    <column>
        <name>codimpuesto</name>
        <type>character varying(10)</type>
        <null>YES</null>
    </column>
    <column>
        <name>stockfis</name>
        <type>double precision</type>
        <null>YES</null>
        <default>0</default>
    </column>
    <column>
        <name>stockmax</name>
        <type>double precision</type>
        <null>YES</null>
        <default>0</default>
    </column>
    <column>
        <name>costemedio</name>
        <type>double precision</type>
        <null>YES</null>
        <default>0</default>
    </column>
    <column>
        <name>preciocoste</name>
        <type>double precision</type>
        <null>YES</null>
        <default>0</default>
    </column>
    <column>
        <name>tipocodbarras</name>
        <type>character varying(8)</type>
        <null>YES</null>
        <default>'Code39'::character varying</default>
    </column>
    <column>
        <name>nostock</name>
        <type>boolean</type>
        <null>YES</null>
        <default>false</default>
    </column>
    <column>
        <name>codsubcuentacom</name>
        <type>character varying(15)</type>
        <null>YES</null>
    </column>
    <column>
        <name>descripcion</name>
        <type>text</type>
        <null>NO</null>
    </column>
    <column>
        <name>codsubcuentairpfcom</name>
        <type>character varying(15)</type>
        <null>YES</null>
    </column>
    <column>
        <name>secompra</name>
        <type>boolean</type>
        <null>YES</null>
        <default>true</default>
    </column>
    <column>
        <name>codfamilia</name>
        <type>character varying(8)</type>
        <null>YES</null>
    </column>
    <column>
        <name>codfabricante</name>
        <type>character varying(8)</type>
        <null>YES</null>
    </column>
    <column>
        <name>imagen</name>
        <type>text</type>
        <null>YES</null>
    </column>
    <column>
        <name>controlstock</name>
        <type>boolean</type>
        <null>YES</null>
        <default>false</default>
    </column>
    <column>
        <name>referencia</name>
        <type>character varying(18)</type>
        <null>NO</null>
    </column>
    <column>
        <name>tipo</name>
        <type>character varying(10)</type>
    </column>
    <column>
        <name>pvp</name>
        <type>double precision</type>
        <null>YES</null>
        <default>0</default>
    </column>
    <column>
        <name>sevende</name>
        <type>boolean</type>
        <null>YES</null>
        <default>true</default>
    </column>
    <column>
        <name>publico</name>
        <type>boolean</type>
        <null>YES</null>
        <default>false</default>
    </column>
    <column>
        <name>partnumber</name>
        <type>character varying(38)</type>
        <null>YES</null>
    </column>
    <column>
        <name>trazabilidad</name>
        <type>boolean</type>
        <null>YES</null>
        <default>false</default>
    </column>
    <constraint>
        <name>ca_articulos_impuestos</name>
        <type>FOREIGN KEY (codimpuesto)
            REFERENCES impuestos (codimpuesto)
            ON DELETE SET NULL ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_articulos_familias</name>
        <type>FOREIGN KEY (codfamilia)
            REFERENCES familias (codfamilia)
            ON DELETE SET NULL ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_articulos_fabricantes</name>
        <type>FOREIGN KEY (codfabricante)
            REFERENCES fabricantes (codfabricante)
            ON DELETE SET NULL ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>articulos_pkey</name>
        <type>PRIMARY KEY (referencia)</type>
    </constraint>
</table>