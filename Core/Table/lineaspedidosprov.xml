<table>
    <column>
        <name>actualizastock</name>
        <type>integer</type>
        <null>NO</null>
        <default>2</default>
    </column>
    <column>
        <name>cantidad</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>codimpuesto</name>
        <type>character varying(10)</type>
    </column>
    <column>
        <name>descripcion</name>
        <type>text</type>
    </column>
    <column>
        <name>dtopor</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>idlinea</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('lineaspedidosprov_idlinea_seq'::regclass)</default>
    </column>
    <column>
        <name>idpedido</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>idvariante</name>
        <type>integer</type>
    </column>
    <column>
        <name>irpf</name>
        <type>double precision</type>
    </column>
    <column>
        <name>iva</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>orden</name>
        <type>integer</type>
        <default>0</default>
    </column>
    <column>
        <name>pvpsindto</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>pvptotal</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>pvpunitario</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>recargo</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>referencia</name>
        <type>character varying(30)</type>
    </column>
    <constraint>
        <name>lineaspedidosprov_pkey</name>
        <type>PRIMARY KEY (idlinea)</type>
    </constraint>
    <constraint>
        <name>ca_lineaspedidosprov_pedidosprov</name>
        <type>FOREIGN KEY (idpedido) REFERENCES pedidosprov (idpedido) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_lineaspedidosprov_variantes</name>
        <type>FOREIGN KEY (idvariante) REFERENCES variantes (idvariante) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>
