    Description:
        Structure for the co_subcuentas table.
-->
<table>
    <column>
        <name>codcuenta</name>
        <type>character varying(10)</type>
        <null>NO</null>
    </column>
    <column>
        <name>coddivisa</name>
        <type>character varying(3)</type>
        <null>NO</null>
    </column>
    <column>
        <name>codejercicio</name>
        <type>character varying(4)</type>
        <null>NO</null>
    </column>
    <column>
        <name>codimpuesto</name>
        <type>character varying(10)</type>
        <null>YES</null>
    </column>
    <column>
        <name>codsubcuenta</name>
        <type>character varying(15)</type>
        <null>NO</null>
    </column>
    <column>
        <name>debe</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>descripcion</name>
        <type>character varying(255)</type>
        <null>YES</null>
    </column>
    <column>
        <name>haber</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>idcuenta</name>
        <type>integer</type>
        <null>YES</null>
    </column>
    <column>
        <name>idempresa</name>
        <type>integer</type>
        <null>YES</null>
    </column>
    <column>
        <name>idsubcuenta</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('co_subcuentas_idsubcuenta_seq'::regclass)</default>
    </column>
    <column>
        <name>iva</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>recargo</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>saldo</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <constraint>
        <name>co_subcuentas_pkey</name>
        <type>PRIMARY KEY (idsubcuenta)</type>
    </constraint>
    <constraint>
        <name>uniq_codsubcuenta</name>
        <type>UNIQUE (codsubcuenta,codejercicio)</type>
    </constraint>
    <constraint>
        <name>ca_co_subcuentas_ejercicios</name>
        <type>FOREIGN KEY (codejercicio)
            REFERENCES ejercicios (codejercicio)
            ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_co_subcuentas_cuentas2</name>
        <type>FOREIGN KEY (idcuenta)
            REFERENCES co_cuentas (idcuenta)
            ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>