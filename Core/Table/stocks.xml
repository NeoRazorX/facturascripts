<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : stocks.xml
    Author     : Carlos Garcia Gomez
    Description:
        Estructura de la tabla stocks.
-->
<table>
    <column>
        <name>referencia</name>
        <type>character varying(18)</type>
        <null>NO</null>
    </column>
    <column>
        <name>disponible</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>stockmin</name>
        <type>double precision</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <column>
        <name>reservada</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>horaultreg</name>
        <type>time without time zone</type>
        <null>YES</null>
        <default>CURRENT_TIMESTAMP</default>
    </column>
    <column>
        <name>nombre</name>
        <type>character varying(100)</type>
        <null>YES</null>
    </column>
    <column>
        <name>pterecibir</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>fechaultreg</name>
        <type>date</type>
        <null>YES</null>
        <default>CURRENT_DATE</default>
    </column>
    <column>
        <name>codalmacen</name>
        <type>character varying(4)</type>
        <null>NO</null>
    </column>
    <column>
        <name>cantidadultreg</name>
        <type>double precision</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <column>
        <name>idstock</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('stocks_idstock_seq'::regclass)</default>
    </column>
    <column>
        <name>cantidad</name>
        <type>double precision</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <column>
        <name>stockmax</name>
        <type>double precision</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <column>
        <name>ubicacion</name>
        <type>character varying(100)</type>
        <null>YES</null>
    </column>
    <constraint>
        <name>ca_stocks_articulos2</name>
        <type>FOREIGN KEY (referencia)
            REFERENCES articulos (referencia)
            ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_stocks_almacenes3</name>
        <type>FOREIGN KEY (codalmacen)
            REFERENCES almacenes (codalmacen)
            ON DELETE CASCADE ON UPDATE CASCADE </type>
    </constraint>
    <constraint>
        <name>uniq_stocks_almacen_referencia</name>
        <type>UNIQUE (codalmacen, referencia)</type>
    </constraint>
    <constraint>
        <name>stocks_pkey</name>
        <type>PRIMARY KEY (idstock)</type>
    </constraint>
</table>