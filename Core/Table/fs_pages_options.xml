<tabla>
    <columna>
        <nombre>id</nombre>
        <tipo>serial</tipo>
        <nulo>NO</nulo>
        <defecto>nextval('fs_pages_options_id_seq'::regclass)</defecto>
    </columna>    
    <columna>
        <nombre>name</nombre>
        <tipo>character varying(30)</tipo>
        <nulo>NO</nulo>
    </columna>
    <columna>
        <nombre>nick</nombre>
        <tipo>character varying(50)</tipo>
        <nulo>YES</nulo>
    </columna>
    <columna>
        <nombre>rows</nombre>
        <tipo>text</tipo>
        <nulo>YES</nulo>
    </columna>    
    <columna>
        <nombre>columns</nombre>
        <tipo>text</tipo>
        <nulo>YES</nulo>
    </columna>
    <columna>
        <nombre>filters</nombre>
        <tipo>text</tipo>
        <nulo>YES</nulo>
    </columna>
    <restriccion>
        <nombre>fs_pages_options_pkey</nombre>
        <consulta>PRIMARY KEY (id)</consulta>
    </restriccion>
    <restriccion>
        <nombre>uniq_pages_options</nombre>
        <consulta>UNIQUE (name, nick)</consulta>
    </restriccion>    
    <restriccion>
        <nombre>ca_fs_pagesoptions_pages</nombre>
        <consulta>FOREIGN KEY (name) REFERENCES fs_pages (name) ON DELETE CASCADE ON UPDATE CASCADE</consulta>
    </restriccion>
    <restriccion>
        <nombre>ca_fs_pagesoptions_users</nombre>
        <consulta>FOREIGN KEY (nick) REFERENCES fs_users (nick) ON DELETE CASCADE ON UPDATE CASCADE</consulta>
    </restriccion>
</tabla>