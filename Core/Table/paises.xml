<table>
    <column>
        <name>validarprov</name>
        <type>boolean</type>
        <null>YES</null>
    </column>
    <column>
        <name>codiso</name>
        <type>character varying(2)</type>
        <null>YES</null>
    </column>
    <column>
        <name>bandera</name>
        <type>text</type>
        <null>YES</null>
    </column>
    <column>
        <name>nombre</name>
        <type>character varying(100)</type>
        <null>YES</null>
    </column>
    <column>
        <name>codpais</name>
        <type>character varying(20)</type>
        <null>NO</null>
    </column>
    <constraint>
        <name>paises_pkey</name>
        <type>PRIMARY KEY (codpais)</type>
    </constraint>
</table>