    Description:
        Structure for the atributos_valores table.
-->
<table>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('atributos_valores_seq'::regclass)</default>
    </column>
    <column>
        <name>codatributo</name>
        <type>character varying(20)</type>
        <null>NO</null>
    </column>
    <column>
        <name>valor</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <constraint>
        <name>atributos_valores_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>ca_atributos_valores</name>
        <type>FOREIGN KEY (codatributo)
            REFERENCES atributos (codatributo)
            ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>