<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : atributos_valores.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the atributos_valores table.
-->
<table>
    <column>
        <name>codatributo</name>
        <type>character varying(20)</type>
        <null>NO</null>
    </column>
    <column>
        <name>descripcion</name>
        <type>character varying(200)</type>
    </column>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>valor</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>orden</name>
        <type>integer</type>
        <default>100</default>
    </column>
    <constraint>
        <name>atributos_valores_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>ca_atributos_valores</name>
        <type>FOREIGN KEY (codatributo) REFERENCES atributos (codatributo) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>uniq_values_atributos_valores</name>
        <type>UNIQUE (codatributo,valor)</type>
    </constraint>
</table>