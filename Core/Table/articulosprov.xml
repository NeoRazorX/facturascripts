<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : articulosprov.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the articulosprov table.
-->
<table>
    <column>
        <name>id</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('articulosprov_id_seq'::regclass)</default>
    </column>
    <column>
        <name>referencia</name>
        <type>character varying(18)</type>
    </column>
    <column>
        <name>codproveedor</name>
        <type>character varying(10)</type>
        <null>NO</null>
    </column>
    <column>
        <name>refproveedor</name>
        <type>character varying(25)</type>
        <null>NO</null>
    </column>
    <column>
        <name>descripcion</name>
        <type>text</type>
    </column>
    <column>
        <name>precio</name>
        <type>double precision</type>
    </column>
    <column>
        <name>dto</name>
        <type>double precision</type>
    </column>
    <column>
        <name>codimpuesto</name>
        <type>character varying(10)</type>
    </column>
    <column>
        <name>stock</name>
        <type>double precision</type>
    </column>
    <column>
        <name>nostock</name>
        <type>boolean</type>
        <null>YES</null>
        <default>true</default>
    </column>
    <column>
        <name>nombre</name>
        <type>character varying(100)</type>
    </column>
    <column>
        <name>coddivisa</name>
        <type>character varying(3)</type>
    </column>
    <column>
        <name>codbarras</name>
        <type>character varying(18)</type>
        <null>YES</null>
    </column>
    <column>
        <name>partnumber</name>
        <type>character varying(38)</type>
        <null>YES</null>
    </column>
    <constraint>
        <name>articulosprov_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>ca_articulosprov_proveedores</name>
        <type>FOREIGN KEY (codproveedor)
            REFERENCES proveedores (codproveedor)
            ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>uniq_articulo_proveedor2</name>
        <type>UNIQUE (codproveedor, refproveedor)</type>
    </constraint>
</table>
