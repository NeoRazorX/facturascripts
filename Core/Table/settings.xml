<table>
    <column>
        <name>name</name>
        <type>character varying(50)</type>
        <null>NO</null>
    </column>
    <column>
        <name>icon</name>
        <type>character varying(20)</type>
        <null>YES</null>
    </column>
    <column>
        <name>description</name>
        <type>text</type>
        <null>YES</null>
    </column>
    <column>
        <name>properties</name>
        <type>text</type>
        <null>YES</null>
    </column>
    <constraint>
        <name>settings_pkey</name>
        <type>PRIMARY KEY (name)</type>
    </constraint>
</table>