<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : lineastransstock.xml
    Author     : Carlos Garcia Gomez
    Description:
        Structure for the lineastransstock table.
-->
<table>
    <column>
        <name>idlinea</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('lineastransstock_idlinea_seq'::regclass)</default>
    </column>
    <column>
        <name>idtrans</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>referencia</name>
        <type>character varying(30)</type>
        <null>NO</null>
        <comment>Reference of the main product</comment>
    </column>
    <column>
        <name>codigo</name>
        <type>character varying(18)</type>
        <default>null</default>
        <comment>Reference of the combination, if exists. Null if not exist.</comment>
    </column>
    <column>
        <name>cantidad</name>
        <type>double precision</type>
        <null>NO</null>
        <comment>Amount of moved goods</comment>
    </column>
    <column>
        <name>descripcion</name>
        <type>text</type>
    </column>
    <constraint>
        <name>lineastransstock_pkey</name>
        <type>PRIMARY KEY (idlinea)</type>
    </constraint>
    <constraint>
        <name>ca_linea_transstock</name>
        <type>FOREIGN KEY (idtrans) REFERENCES transstock (idtrans) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_linea_transstock_articulos</name>
        <type>FOREIGN KEY (referencia) REFERENCES articulos (referencia) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>uniq_referencia_transferencia</name>
        <type>UNIQUE (idtrans,referencia)</type>
    </constraint>
</table>
