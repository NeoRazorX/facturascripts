<table>
    <column>
        <name>acreedor</name>
        <type>boolean</type>
        <default>false</default>
    </column>
    <column>
        <name>cifnif</name>
        <type>character varying(30)</type>
        <null>NO</null>
    </column>
    <column>
        <name>codcliente</name>
        <type>character varying(10)</type>
