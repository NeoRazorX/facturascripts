    <column>
        <name>codproveedor</name>
        <type>character varying(10)</type>
        <null>NO</null>
    </column>
    <column>
        <name>codretencion</name>
        <type>character varying(10)</type>
    </column>
    <column>
        <name>codserie</name>
        <type>character varying(4)</type>
    </column>
    <column>
        <name>codsubcuenta</name>
        <type>character varying(15)</type>
    </column>
    <column>
        <name>debaja</name>
